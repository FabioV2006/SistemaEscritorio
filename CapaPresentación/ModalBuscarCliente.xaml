<Window x:Class="CapaPresentación.ModalBuscarCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Cliente" Height="450" Width="700"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Buscar por:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="cboFiltro" Width="150" Margin="5" Padding="5" SelectedIndex="0">
                    <ComboBoxItem Content="Razón Social"/>
                    <ComboBoxItem Content="Documento"/>
                </ComboBox>
                <TextBox x:Name="txtBusqueda" Width="200" Margin="5" Padding="5" KeyDown="txtBusqueda_KeyDown"/>
                <Button x:Name="btnBuscar" Content="🔍" Margin="5" Padding="10,5" Click="btnBuscar_Click"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" x:Name="dgClientes" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" Background="White"
                  MouseDoubleClick="dgClientes_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Documento" Binding="{Binding Documento}" Width="1.5*"/>
                <DataGridTextColumn Header="Razón Social" Binding="{Binding RazonSocial}" Width="2.5*"/>
                <DataGridTextColumn Header="Nombre Comercial" Binding="{Binding NombreComercial}" Width="2*"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="1*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>