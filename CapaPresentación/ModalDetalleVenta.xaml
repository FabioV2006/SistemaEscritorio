<Window x:Class="CapaPresentación.ModalDetalleVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Venta" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Detalle de Venta" FontSize="18" FontWeight="Bold" Margin="15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0">

                <GroupBox Header="Datos de la Venta" FontWeight="Bold" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Nro. Documento:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtNroDocumento" Text="F001-00001" Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,10,0">
                            <TextBlock Text="Tipo Documento:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtTipoDocumento" Text="Factura" Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Fecha de Registro:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtFecha" Text="01/10/2025" Padding="5" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Datos del Cliente" FontWeight="Bold" Margin="5,10,5,5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Razón Social:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtRazonSocialCliente" Text="Farmacia Los Ángeles S.A.C." Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Documento (RUC):" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtDocumentoCliente" Text="20100454580" Padding="5" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Productos Vendidos (Trazabilidad de Lote)" FontWeight="Bold" Margin="5,10,5,5">
                    <DataGrid x:Name="dgDetalle" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="White"
                              GridLinesVisibility="Vertical" VerticalGridLinesBrush="#DDD"
                              HorizontalGridLinesBrush="#DDD">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding LOTES.PRODUCTOS.Nombre}" Width="2.5*"/>
                            <DataGridTextColumn Header="Nro. Lote" Binding="{Binding LOTES.NumeroLote}" Width="1*"/>
                            <DataGridTextColumn Header="Vencimiento" Binding="{Binding LOTES.FechaVencimiento, StringFormat='dd/MM/yyyy'}" Width="1*"/>
                            <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="0.6*"/>
                            <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVentaUnitario, StringFormat='C'}" Width="1*"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat='C'}" Width="1.2*" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
                    <TextBlock Text="Monto Pago:" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtMontoPago" Text="S/ 0.00" FontSize="14" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Monto Cambio:" FontSize="14" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtMontoCambio" Text="S/ 0.00" FontSize="14" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Monto Total:" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtMontoTotal" Text="S/ 0.00" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15" Background="#f9f9f9">
            <Button x:Name="btnImprimir" Content="🖨️ Imprimir" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnImprimir_Click"/>
            <Button x:Name="btnCerrar" Content="Cerrar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>