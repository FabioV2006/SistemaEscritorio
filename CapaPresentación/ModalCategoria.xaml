<Window x:Class="CapaPresentación.ModalCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Categoría" 
        Height="280" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="✚ Nueva Categoría" FontSize="18" FontWeight="Bold" Margin="15"/>

        <Border Grid.Row="1" Background="#f9f9f9" Margin="10,0" CornerRadius="5">
            <StackPanel Margin="20">
                <TextBlock Text="Descripción:" FontWeight="Medium" Margin="0,5,0,3"/>
                <TextBox x:Name="txtDescripcion" Padding="5"/>

                <CheckBox x:Name="chkEstado" Content="Activo" Margin="0,15,0,0" IsChecked="True"/>

                <TextBox x:Name="txtId" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnGuardar" Content="Guardar" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>