<Window x:Class="CapaPresentación.ModalDetalleDevProveedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Devolución a Proveedor" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Detalle de Devolución a Proveedor" FontSize="18" FontWeight="Bold" Margin="15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0">

                <GroupBox Header="Datos de la Devolución" FontWeight="Bold" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Fecha Devolución:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtFechaDev" Text="-" Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,10,0">
                            <TextBlock Text="Usuario Registra:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtUsuario" Text="-" Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,0,0,0">
                            <TextBlock Text="Motivo General:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtMotivo" Text="-" Padding="5" FontSize="14" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Datos de la Compra Original" FontWeight="Bold" Margin="5,10,5,5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Proveedor:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtProveedor" Text="-" Padding="5" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Nro. Documento Compra:" FontSize="11" Foreground="Gray"/>
                            <TextBlock x:Name="txtNroDocCompra" Text="-" Padding="5" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Productos Devueltos (Stock Descontado)" FontWeight="Bold" Margin="5,10,5,5">
                    <DataGrid x:Name="dgDetalle" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding LOTES.PRODUCTOS.Nombre}" Width="2.5*"/>
                            <DataGridTextColumn Header="Nro. Lote" Binding="{Binding LOTES.NumeroLote}" Width="1*"/>
                            <DataGridTextColumn Header="Cant. Devuelta" Binding="{Binding Cantidad}" Width="1*" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Precio Costo" Binding="{Binding MontoUnitario, StringFormat='C'}" Width="1*"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat='C'}" Width="1.2*" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <TextBlock x:Name="txtMontoTotal" Text="Monto Total Devuelto: S/ 0.00" 
                           FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,10,10,10"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15" Background="#f9f9f9">
            <Button x:Name="btnCerrar" Content="Cerrar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>