<Window x:Class="CapaPresentación.ModalBuscarProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar Producto" Height="450" Width="600"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Buscar por:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox x:Name="cboFiltro" Width="150" Margin="5" Padding="5" SelectedIndex="0">
                    <ComboBoxItem Content="Nombre"/>
                    <ComboBoxItem Content="Código"/>
                </ComboBox>
                <TextBox x:Name="txtBusqueda" Width="200" Margin="5" Padding="5" KeyDown="txtBusqueda_KeyDown"/>
                <Button x:Name="btnBuscar" Content="🔍" Margin="5" Padding="10,5" Click="btnBuscar_Click"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" x:Name="dgProductos" AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True" Background="White"
                  MouseDoubleClick="dgProductos_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="1*"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2.5*"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding CATEGORIAS.Descripcion, FallbackValue='N/A'}" Width="1.5*"/>
                <DataGridTextColumn Header="Laboratorio" Binding="{Binding LABORATORIOS.Nombre, FallbackValue='N/A'}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>