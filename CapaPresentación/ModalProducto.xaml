<Window x:Class="CapaPresentación.ModalProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentación"
        mc:Ignorable="d"
        Title="Detalle de Producto" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="✚ Nuevo Producto" FontSize="18" FontWeight="Bold" Margin="15"/>

        <Border Grid.Row="1" Background="#f9f9f9" Margin="10,0" CornerRadius="5">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Código:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtCodigo" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Nombre:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtNombre" Padding="5"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Descripción:" FontWeight="Medium" Margin="0,10,0,3"/>
                <TextBox x:Name="txtDescripcion" Padding="5" Height="60" TextWrapping="Wrap"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,10,10,0">
                        <TextBlock Text="Categoría:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <ComboBox x:Name="cboCategoria" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,10,0,0">
                        <TextBlock Text="Laboratorio:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <ComboBox x:Name="cboLaboratorio" Padding="5"/>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="chkRequiereReceta" Content="Requiere Receta" Margin="0,20,0,0"/>
                <CheckBox x:Name="chkEstado" Content="Activo" Margin="0,10,0,0" IsChecked="True"/>

                <TextBox x:Name="txtIdProducto" Visibility="Collapsed"/>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnGuardar" Content="Guardar" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>