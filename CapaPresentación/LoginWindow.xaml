<Window x:Class="CapaPresentación.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentación"
        mc:Ignorable="d"
        Title="Iniciar Sesión - DistribuidoraSYS" 
        Height="500" Width="450"
        WindowStyle="None" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Grid>
        <Border Background="Black" Opacity="0.3" CornerRadius="10" Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
        </Border>

        <Border Background="#f0f2f5" CornerRadius="10" Margin="10">
            <StackPanel>

                <Border Background="#0078d4" CornerRadius="10,10,0,0" Padding="24">
                    <StackPanel>
                        <TextBlock Text="DistribuidoraSYS" 
                                   Foreground="White" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Sistema de Gestión B2B Farmacéutico" 
                                   Foreground="White" 
                                   Opacity="0.9" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <StackPanel Margin="32">

                    <TextBlock Text="Usuario (Documento)" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="txtDocumento" 
                             Padding="10" 
                             FontSize="16"/>

                    <TextBlock Text="Contraseña" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,20,0,8"/>
                    <PasswordBox x:Name="txtClave" 
                                 Padding="10" 
                                 FontSize="16"/>

                    <Button x:Name="btnIngresar" 
                            Content="Ingresar" 
                            Background="#0078d4" 
                            Foreground="White" 
                            Padding="12" 
                            Margin="0,25,0,0" 
                            FontSize="16" 
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="btnIngresar_Click"/>

                    <Button x:Name="btnSalir" 
                            Content="Salir" 
                            Background="#d9534f" 
                            Foreground="White" 
                            Padding="10" 
                            Margin="0,10,0,0" 
                            FontSize="14"
                            Cursor="Hand"
                            Click="btnSalir_Click"/>

                    <TextBlock x:Name="lblError" 
                               Text="Usuario o contraseña incorrectos, o usuario inactivo." 
                               Foreground="#d9534f" 
                               Background="#fdf2f2" 
                               Margin="0,16,0,0" 
                               Padding="10" 
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>