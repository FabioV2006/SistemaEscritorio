<Window x:Class="CapaPresentación.ModalRol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Rol y Permisos" 
        Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="✚ Nuevo Rol" FontSize="18" FontWeight="Bold" Margin="15"/>

        <Border Grid.Row="1" Background="#f9f9f9" Margin="10,0" CornerRadius="5">
            <StackPanel Margin="20">
                <TextBlock Text="Nombre del Rol:" FontWeight="Medium" Margin="0,5,0,3"/>
                <TextBox x:Name="txtDescripcion" Padding="5"/>

                <TextBlock Text="Permisos Asignados:" FontWeight="Medium" Margin="0,15,0,3"/>

                <TextBox x:Name="txtIdRol" Visibility="Collapsed"/>

                <ScrollViewer Height="350" Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                    <ItemsControl x:Name="icPermisos">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Nombre}" 
                                          IsChecked="{Binding Asignado}" 
                                          Margin="0,5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnGuardar" Content="Guardar" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>