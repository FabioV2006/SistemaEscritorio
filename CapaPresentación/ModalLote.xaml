<Window x:Class="CapaPresentación.ModalLote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentación"
        mc:Ignorable="d"
        Title="Ajuste de Lote" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="✏️ Ajustar Lote de Inventario" FontSize="18" FontWeight="Bold" Margin="15"/>

        <Border Grid.Row="1" Background="#f9f9f9" Margin="10,0" CornerRadius="5">
            <StackPanel Margin="20">

                <TextBlock Text="Producto:" FontWeight="Medium" Margin="0,5,0,3"/>
                <TextBox x:Name="txtProducto" Padding="5" IsReadOnly="True" Background="#eee"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,10,10,0">
                        <TextBlock Text="Número de Lote:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtLote" Padding="5" IsReadOnly="True" Background="#eee"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,10,0,0">
                        <TextBlock Text="Fecha Vencimiento:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtVencimiento" Padding="5" IsReadOnly="True" Background="#eee"/>
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Precio Compra (Histórico):" FontWeight="Medium" Margin="0,5,0,3"/>
                    <TextBox x:Name="txtPrecioCompra" Padding="5" IsReadOnly="True" Background="#eee"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,10,10,0">
                        <TextBlock Text="Precio Venta (Editable):" FontWeight="Medium" Margin="0,5,0,3" Foreground="Blue"/>
                        <TextBox x:Name="txtPrecioVenta" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,10,0,0">
                        <TextBlock Text="Stock (Editable - Ajuste):" FontWeight="Medium" Margin="0,5,0,3" Foreground="Blue"/>
                        <TextBox x:Name="txtStock" Padding="5"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Ubicación Almacén (Editable):" FontWeight="Medium" Margin="0,15,0,3" Foreground="Blue"/>
                <TextBox x:Name="txtUbicacion" Padding="5"/>

                <TextBox x:Name="txtIdLote" Visibility="Collapsed"/>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnGuardar" Content="Guardar Cambios" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>