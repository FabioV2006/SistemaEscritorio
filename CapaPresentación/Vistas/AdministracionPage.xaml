<Page x:Class="CapaPresentación.Vistas.AdministracionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentación.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="AdministracionPage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <Style x:Key="AccionButtonBase" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource AccionButtonBase}">
            <Setter Property="Content" Value="✏️"/>
            <Setter Property="Foreground" Value="Blue"/>
        </Style>
        <Style x:Key="StatusButton" TargetType="Button" BasedOn="{StaticResource AccionButtonBase}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Background="White" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1">
            <TabControl x:Name="AdminTabControl" Margin="5" SelectionChanged="AdminTabControl_SelectionChanged">

                <TabItem x:Name="TabUsuarios" Header="Gestión de Usuarios">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Grid>
                                <Button x:Name="btnNuevoUsuario" Content="✚ Nuevo Usuario" 
                                        HorizontalAlignment="Left" Padding="10,5" 
                                        Background="#0078d4" Foreground="White" FontWeight="Bold"
                                        Cursor="Hand" Click="btnNuevoUsuario_Click"/>
                            </Grid>
                        </Border>

                        <DataGrid Grid.Row="1" x:Name="dgUsuarios" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" Background="White"
                                  GridLinesVisibility="Vertical" VerticalGridLinesBrush="#DDD"
                                  HorizontalGridLinesBrush="#DDD">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Documento" Binding="{Binding Documento}" Width="1.2*"/>
                                <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="2.5*"/>
                                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*"/>
                                <DataGridTextColumn Header="Rol" Binding="{Binding ROLES.Descripcion, FallbackValue='N/A'}" Width="1*"/>
                                <DataGridTemplateColumn Header="Estado" Width="0.8*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="txtEstado" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="True">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Activo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#5cb85c"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="False">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Inactivo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#d9534f"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="1*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}" ToolTip="Editar Usuario" Click="btnEditarUsuario_Click"/>
                                                <Button x:Name="btnEstado" Style="{StaticResource StatusButton}" Click="btnEstadoUsuario_Click"/>
                                            </StackPanel>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="True">
                                                    <Setter TargetName="btnEstado" Property="Content" Value="❌"/>
                                                    <Setter TargetName="btnEstado" Property="ToolTip" Value="Desactivar Usuario"/>
                                                    <Setter TargetName="btnEstado" Property="Foreground" Value="#d9534f"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="False">
                                                    <Setter TargetName="btnEstado" Property="Content" Value="✔️"/>
                                                    <Setter TargetName="btnEstado" Property="ToolTip" Value="Activar Usuario"/>
                                                    <Setter TargetName="btnEstado" Property="Foreground" Value="#5cb85c"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem x:Name="TabRoles" Header="Gestión de Roles">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Button x:Name="btnNuevoRol" Content="✚ Nuevo Rol" 
                                    HorizontalAlignment="Left" Padding="10,5" 
                                    Background="#0078d4" Foreground="White" FontWeight="Bold"
                                    Cursor="Hand" Click="btnNuevoRol_Click"/>
                        </Border>
                        <DataGrid Grid.Row="1" x:Name="dgRoles" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" 
                                  HeadersVisibility="Column" Background="White"
                                  GridLinesVisibility="Vertical" VerticalGridLinesBrush="#DDD"
                                  HorizontalGridLinesBrush="#DDD">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Descripción del Rol" Binding="{Binding Descripcion}" Width="2*"/>
                                <DataGridTextColumn Header="Nº Permisos" Binding="{Binding PERMISOS.Count}" Width="1*"/>
                                <DataGridTemplateColumn Header="Acciones" Width="0.5*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}" 
                                                        ToolTip="Editar Rol y Permisos"
                                                        Click="btnEditarRol_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem x:Name="TabCategorias" Header="Gestión de Categorías">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Button x:Name="btnNuevaCategoria" Content="✚ Nueva Categoría" 
                                    HorizontalAlignment="Left" Padding="10,5" 
                                    Background="#0078d4" Foreground="White" FontWeight="Bold"
                                    Cursor="Hand" Click="btnNuevaCategoria_Click"/>
                        </Border>
                        <DataGrid Grid.Row="1" x:Name="dgCategorias" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column" Background="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="2*"/>
                                <DataGridTemplateColumn Header="Estado" Width="1*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="txtEstado" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="True">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Activo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#5cb85c"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="False">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Inactivo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#d9534f"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="0.5*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}" ToolTip="Editar Categoría" Click="btnEditarCategoria_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <TabItem x:Name="TabLaboratorios" Header="Gestión de Laboratorios">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="#f9f9f9" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Button x:Name="btnNuevoLaboratorio" Content="✚ Nuevo Laboratorio" 
                                    HorizontalAlignment="Left" Padding="10,5" 
                                    Background="#0078d4" Foreground="White" FontWeight="Bold"
                                    Cursor="Hand" Click="btnNuevoLaboratorio_Click"/>
                        </Border>
                        <DataGrid Grid.Row="1" x:Name="dgLaboratorios" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column" Background="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
                                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="3*"/>
                                <DataGridTemplateColumn Header="Estado" Width="1*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="txtEstado" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Estado}" Value="True">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Activo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#5cb85c"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Estado}" Value="False">
                                                    <Setter TargetName="txtEstado" Property="Text" Value="● Inactivo"/>
                                                    <Setter TargetName="txtEstado" Property="Foreground" Value="#d9534f"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Acciones" Width="0.5*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}" ToolTip="Editar Laboratorio" Click="btnEditarLaboratorio_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

            </TabControl>
        </Border>
    </Grid>
</Page>