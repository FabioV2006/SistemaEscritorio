<Page x:Class="CapaPresentación.Vistas.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentación.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="DashboardPage"
      
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      
      Loaded="DashboardPage_Loaded"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <WrapPanel HorizontalAlignment="Center">
                <Border Width="200" Height="100" Background="#FFF" CornerRadius="10" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#CCC" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Ventas del Mes" FontSize="16" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Left" Margin="15,10,0,0"/>
                        <TextBlock x:Name="txtTotalVentas" Text="0.00" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                    </StackPanel>
                </Border>
                <Border Width="200" Height="100" Background="#FFF" CornerRadius="10" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#CCC" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Clientes Activos" FontSize="16" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Left" Margin="15,10,0,0"/>
                        <TextBlock x:Name="txtClientesActivos" Text="0" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                    </StackPanel>
                </Border>
                <Border Width="200" Height="100" Background="#FFF" CornerRadius="10" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#CCC" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Lotes por Vencer (90d)" FontSize="16" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Left" Margin="15,10,0,0"/>
                        <TextBlock x:Name="txtLotesPorVencer" Text="0" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                    </StackPanel>
                </Border>
                <Border Width="200" Height="100" Background="#FFF" CornerRadius="10" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="10" Color="#CCC" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Productos Stock Crítico" FontSize="16" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Left" Margin="15,10,0,0"/>
                        <TextBlock x:Name="txtStockCritico" Text="0" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Left" Margin="15,0,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <Separator Margin="0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                <TextBlock Text="Reportes desde:" VerticalAlignment="Center" Margin="5"/>
                <DatePicker x:Name="dpFechaInicio" Width="150" Margin="5"/>
                <TextBlock Text="Hasta:" VerticalAlignment="Center" Margin="20,5,5,5"/>
                <DatePicker x:Name="dpFechaFin" Width="150" Margin="5"/>
                <Button x:Name="btnAplicarFiltro" Content="Aplicar" Margin="10,0" Padding="15,5" Click="btnAplicarFiltro_Click"/>
            </StackPanel>

            <Grid Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Ventas en el Tiempo" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <lvc:CartesianChart Series="{Binding VentasSeries}" LegendLocation="Right" Height="300">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Mes" Labels="{Binding VentasXLabels}" LabelsRotation="-15">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" />
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Monto Vendido" LabelFormatter="{Binding FormatoMoneda}"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Productos Más Vendidos" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <lvc:PieChart Series="{Binding TopProductosSeries}" LegendLocation="Bottom" Height="300"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Ventas por Categoría" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <lvc:PieChart Series="{Binding VentasCategoriaSeries}" LegendLocation="Bottom" Height="300"/>
                    </StackPanel>
                </Border>

            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>