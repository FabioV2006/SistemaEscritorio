<Page x:Class="CapaPresentación.Vistas.DevolucionClientePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentación.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="DevolucionClientePage"
      Loaded="Page_Loaded">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="FormularioDevolucion">

            <GroupBox Header="1. Buscar Venta Original" FontWeight="Bold" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnBuscarVenta" Grid.Column="0" Content="🔍 Buscar Venta" 
                            Padding="10,5" VerticalAlignment="Bottom" 
                            Background="#0078d4" Foreground="White"
                            Cursor="Hand"
                            Click="btnBuscarVenta_Click"/>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Nro. Documento (Factura/Boleta):" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNroDocVenta" Padding="5" IsReadOnly="True" Background="#eee"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Cliente:" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtClienteVenta" Padding="5" IsReadOnly="True" Background="#eee"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                        <TextBlock Text="Fecha de Venta:" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtFechaVenta" Padding="5" IsReadOnly="True" Background="#eee"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="2. Productos de la Venta (Seleccionar para devolver)" FontWeight="Bold" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <DataGrid x:Name="dgProductosVendidos" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="False" 
                              HeadersVisibility="Column" Background="White"
                              Height="300"
                              GridLinesVisibility="Vertical" VerticalGridLinesBrush="#DDD"
                              HorizontalGridLinesBrush="#DDD">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="2.5*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Lote" Binding="{Binding NumeroLote}" Width="1*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Cant. Vendida" Binding="{Binding CantidadVendida}" Width="1*" IsReadOnly="True" FontWeight="Bold"/>

                            <DataGridTextColumn Header="Cant. a Devolver" 
                                                Binding="{Binding CantidadADevolver, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="1.2*" FontWeight="Bold" Foreground="Blue"/>
                            <DataGridTextColumn Header="Motivo de Devolución" 
                                                Binding="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="3. Motivo General y Registro" FontWeight="Bold" Margin="0,0,0,10">
                <Grid Margin="10">
                    <StackPanel>
                        <TextBlock Text="Motivo General (Requerido):" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMotivoGeneral" Height="60" Padding="5" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Border Background="White" CornerRadius="5" BorderBrush="#DDD" BorderThickness="1" Padding="15">
                <Grid>
                    <TextBlock x:Name="txtMontoTotalDevolver" Text="Monto Total a Devolver: S/ 0.00" 
                               FontSize="18" FontWeight="Bold" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Red"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnRegistrarDevolucion" Content="Registrar Devolución" 
                                Padding="15,8" 
                                Background="#d9534f" 
                                Foreground="White" 
                                FontWeight="Bold"
                                Click="btnRegistrarDevolucion_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>