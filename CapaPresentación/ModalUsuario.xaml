<Window x:Class="CapaPresentación.ModalUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Usuario" 
        Height="480" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" Text="✚ Nuevo Usuario" FontSize="18" FontWeight="Bold" Margin="15"/>

        <Border Grid.Row="1" Background="#f9f9f9" Margin="10,0" CornerRadius="5">
            <StackPanel Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Documento:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtDocumento" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Nombre Completo:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <TextBox x:Name="txtNombre" Padding="5"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Correo:" FontWeight="Medium" Margin="0,10,0,3"/>
                <TextBox x:Name="txtCorreo" Padding="5"/>

                <TextBlock Text="Contraseña:" FontWeight="Medium" Margin="0,10,0,3"/>
                <PasswordBox x:Name="txtClave" Padding="5"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Rol:" FontWeight="Medium" Margin="0,5,0,3"/>
                        <ComboBox x:Name="cboRol" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <CheckBox x:Name="chkEstado" Content="Activo" Margin="0,10,0,0" IsChecked="True"/>
                    </StackPanel>
                </Grid>

                <TextBox x:Name="txtIdUsuario" Visibility="Collapsed"/>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button x:Name="btnGuardar" Content="Guardar" 
                    Padding="15,5" Margin="5" 
                    Background="#0078d4" Foreground="White" 
                    FontWeight="Bold"
                    Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Padding="15,5" Margin="5" 
                    Background="#6c757d" Foreground="White"
                    Click="btnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>